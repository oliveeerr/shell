scale=2
/* este programa resuelve ecuaciones de segundo grado */
print "\n Ax2+Bc+C=0 \n"
print "A: " ; fa = read()
print "B: " ; fb = read()
print "C: " ; fc = read()
print "\n" 
print "X1: "
(-1*fb + sqrt(fb*fb-4*fa*fc ))/(2*fa)
print "X2: "
(-1*fb + sqrt(fb*fb-4*fa*fc ))/(2*fa)
quit 


